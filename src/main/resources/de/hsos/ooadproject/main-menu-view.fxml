<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.*?>

<HBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT" style="-fx-background-color: WHITE;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.hsos.ooadproject.controller.MainMenuController">
    <children>
        <MFXButton buttonType="RAISED" onAction="#showWatchList" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #414BB2; -fx-text-fill: white;" text="Aktien-Watchlist">
            <HBox.margin>
                <Insets bottom="8.0" left="8.0" top="8.0" />
            </HBox.margin>
        </MFXButton>
        <MFXButton buttonType="RAISED" onAction="#showStockList" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #414BB2; -fx-text-fill: white;" text="Alle Aktien">
            <HBox.margin>
                <Insets bottom="8.0" left="8.0" top="8.0" />
            </HBox.margin>
        </MFXButton>
        <MFXButton buttonType="RAISED" onAction="#showPortfolio" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #414BB2; -fx-text-fill: white;" text="Portfolio">
            <HBox.margin>
                <Insets bottom="8.0" left="8.0" top="8.0" />
            </HBox.margin>
        </MFXButton>

        <Pane HBox.hgrow="ALWAYS" />

        <MFXTextField floatMode="DISABLED" prefWidth="200.0" promptText="Suchen..." style="-fx-border-color: #414BB2;">
            <leadingIcon>
                <FontIcon iconColor="#414BB2" iconLiteral="mdmz-search" iconSize="32" />
            </leadingIcon>
         <HBox.margin>
            <Insets bottom="8.0" left="8.0" top="8.0" />
         </HBox.margin>
        </MFXTextField>

        <Pane HBox.hgrow="ALWAYS" />

        <MFXButton buttonType="FLAT" text="">
            <graphic>
                <FontIcon accessibleRole="BUTTON" fill="#573f3f" iconColor="#414BB2" iconLiteral="mdoal-account_circle" iconSize="32" selectionFill="#bebebe" />
            </graphic>
         <HBox.margin>
            <Insets bottom="8.0" left="8.0" top="8.0" />
         </HBox.margin>
        </MFXButton>
    </children>
    <opaqueInsets>
        <Insets />
    </opaqueInsets>
</HBox>
